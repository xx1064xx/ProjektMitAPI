@page
@model ProjektMitAPI.Pages.movies.tenetModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SCOPE</title>
        <link rel="icon" href="/images/JustLogoNoBackground.png">

        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="stylesheet" href="/styles/MovieView.css">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;700&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <div class="headertop">
                <a href="../index"><img src="/images/JustLogoNoBackground.png" alt="scope logo" class="logoHeader"></a>
                <div id="searchbar">
                    <input type="text" placeholder="Suche">
                    <img src="/images/Untitled.svg" alt="search Icon">
                </div>
                <a href="/pages/profile.html"><img src="/images/profilePicture.jpg" alt="Profile Picture" class="profilePicture"></a>
            </div>
            <nav>

                <ul>
                    <li><a href="#"><h3>Filme</h3></a></li>
                    <li><a href="#"><h3>Serien</h3></a></li>
                    <li><a href="#"><h3>Genre</h3></a></li>
                    <li><a href="#"><h3>Erhältlich auf</h3></a></li>
                </ul>
                 
            </nav>
            <hr>
        </header>

        <main>
            <img src="/images/moviesAndShows/TenetBanner.jpg" alt="Tenet" class="banner">

            <h1>Tenet</h1>

            <div class="rating">
                <img src="/images/targetRed.png" alt="Target Red">
                <img src="/images/targetRed.png" alt="Target Red">
                <img src="/images/targetRed.png" alt="Target Red">
                <img src="/images/targetRed.png" alt="Target Red">
                <img src="/images/targetBlack.png" alt="Target Black">
            </div>

            <div class="information">
                <span class="left">Action / SciFi</span>
                <span class="center">150 min</span>
                <span class="right">2020</span>
            </div>

            <div class="streamOn"><h2>Stream On</h2><a target="_blank" href="https://www.netflix.com/ch/title/81198930?source=35"><img src="/images/streamingIcons/Netflix.svg" alt="Netflix"></a></div>
            <div class="youtubeVideoContainer">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/LdOM0x0XDMo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
            <div class="line"></div>
            <h1>Bewertungen</h1>
            <div class="reviews">
                <div class="reviewCard">
                    <div class="reviewRating">
                        <img src="/images/targetRed.png" alt="Red Target">
                        <img src="/images/targetRed.png" alt="Red Target">
                        <img src="/images/targetBlack.png" alt="Black Target">
                        <img src="/images/targetBlack.png" alt="Black Target">
                        <img src="/images/targetBlack.png" alt="Black Target">
                    </div>
                    <p>
                        The movie was well made but really confusing so I didn't really enjoy it.
                    </p>
                    <div role="button"><a href=""></a></div>
                </div>

                <div class="reviewCard">
                    <div class="reviewRating">
                        <img src="/images/targetRed.png" alt="Red Target">
                        <img src="/images/targetRed.png" alt="Red Target">
                        <img src="/images/targetRed.png" alt="Red Target">
                        <img src="/images/targetBlack.png" alt="Black Target">
                        <img src="/images/targetBlack.png" alt="Black Target">
                    </div>
                    <p>
                        Good movie, nice story, little bit confusing
                    </p>
                </div>
                <div class="ShowMoreButtonContainer">
                    <div role="button" class="ShowMoreButton">Show More</div>
                </div>
            </div>
            <div class="line"></div>
            <h1>Actors</h1>
            <div class="actors">
                <div class="actorCard">
                    <img src="/images/actors/JohnDavidWashington.jpeg" alt="John David Washington" class="actorImage">
                    <h2>John David Washington</h2>
                    <h3>-</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/ElizabethDebicki.jpeg" alt="Elizabeth Debicki" class="actorImage">
                    <h2>Elizabeth Debicki</h2>
                    <h3>Kat</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/RobertPattinson.jpeg" alt="Robert Pattinson" class="actorImage">
                    <h2>Robert Pattinson</h2>
                    <h3>Neil</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/KennethBranagh.jpeg" alt="Kenneth Branagh" class="actorImage">
                    <h2>Kenneth Branagh</h2>
                    <h3>Andrei Sator</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/ClémencePoésy.jpeg" alt="Clémence Poésy" class="actorImage">
                    <h2>Clémence Poésy</h2>
                    <h3>Barbara</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/HimeshPatel.jpeg" alt="Himesh Patel" class="actorImage">
                    <h2>Himesh Patel</h2>
                    <h3>Mahir</h3>
                </div>
            </div>
        </main>

        <footer>
            <p>Loris & Elia</p>
            <img src="/images/JustLogoNoBackground.png" alt="SCOPE Logo">
            <p id="ScopeAcronym">
                <span><strong>S</strong> - Streaming</span>
                <span><strong>C</strong> - Catalog</span>
                <span><strong>O</strong> - Of</span>
                <span><strong>P</strong> - Premium</span>
                <span><strong>E</strong> - Entertainment</span>
            </p>
        </footer>


        <script src="script/PageLinks.js"></script>
    </body>
    </html>
}
