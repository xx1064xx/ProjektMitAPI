@page
@model ProjektMitAPI.Pages.movies.tenetModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SCOPE</title>
        <link rel="icon" href="/images/JustLogoNoBackground.png">

        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="stylesheet" href="/styles/MovieView.css">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;700&display=swap" rel="stylesheet">

        <script src="/scripts/moviePageLoading.js" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>
    </head>
    <body>
        <script type="text/x-handlebars-template" id="moviePageTemplate">
            <img src="/images/MovieBanners/{{identifier}}.jpg" alt="MovieBanner" class="banner">

            <h1>{{title}}</h1>


            <h2>Rating: {{rating}} / 5</h2>

            <div class="information">
                <span class="left">{{genre}}</span>
                <span class="center">{{duration}} min</span>
                <span class="right">{{releaseDate}}</span>
            </div>

            <div class="streamOn"><h2>Stream On</h2><a target="_blank" href="{{streamingLink}}"><img src="/images/StreamingIcons/{{streamingPlatform}}.svg" alt="{{streamingPlatform}}"></a></div>
            <div class="youtubeVideoContainer">
                <iframe width="560" height="315" src="{{trailerLink}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
            <div class="line"></div>
            <h1>Bewertungen</h1>



            <div class="reviews">
                {{#each reviews}}
                <div class="reviewCard">
                    <h1>Rating: {{rating}} / 5</h1>
                    <p>{{comment}}</p>
                    <div role="button"><a href=""></a></div>
                </div>
                {{/each}}
                <div class="ShowMoreButtonContainer">
                    <div role="button" class="ShowMoreButton">Show More</div>
                </div>
            </div>






            <div class="line"></div>
            <h1>Actors</h1>
            <div class="actors">
                <div class="actorCard">
                    <img src="/images/actors/JohnDavidWashington.jpeg" alt="John David Washington" class="actorImage">
                    <h2>John David Washington</h2>
                    <h3>-</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/ElizabethDebicki.jpeg" alt="Elizabeth Debicki" class="actorImage">
                    <h2>Elizabeth Debicki</h2>
                    <h3>Kat</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/RobertPattinson.jpeg" alt="Robert Pattinson" class="actorImage">
                    <h2>Robert Pattinson</h2>
                    <h3>Neil</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/KennethBranagh.jpeg" alt="Kenneth Branagh" class="actorImage">
                    <h2>Kenneth Branagh</h2>
                    <h3>Andrei Sator</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/ClémencePoésy.jpeg" alt="Clémence Poésy" class="actorImage">
                    <h2>Clémence Poésy</h2>
                    <h3>Barbara</h3>
                </div>

                <div class="actorCard">
                    <img src="/images/actors/HimeshPatel.jpeg" alt="Himesh Patel" class="actorImage">
                    <h2>Himesh Patel</h2>
                    <h3>Mahir</h3>
                </div>
            </div>
        </script>



        @{
            Html.RenderPartial("_header");
        }

        <main class="moviePageMain">
            
        </main>

        @{
            Html.RenderPartial("_footer");
        }
    </body>
    </html>
}
